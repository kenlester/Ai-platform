{
  "purpose": "Data storage for AI patterns, metrics, and caching",
  "ai_handlers": [
    "dataManager",
    "metricsCollector",
    "patternAnalyzer"
  ],
  "dependencies": [
    "/ai_core/models",
    "/api/internal"
  ],
  "priority": 2,
  "access_pattern": "both",
  "subcomponents": {
    "patterns": {
      "purpose": "AI learning patterns and recognition data",
      "priority": 1,
      "metrics_collect": true,
      "storage": {
        "type": "sqlite",
        "max_size": "5GB",
        "backup_interval": 86400
      }
    },
    "metrics": {
      "purpose": "Performance and operational metrics",
      "priority": 2,
      "metrics_collect": true,
      "retention": {
        "raw_data": "7d",
        "aggregated": "30d"
      }
    }
  },
  "storage_config": {
    "compression": true,
    "encryption": false,
    "auto_cleanup": true,
    "cleanup_threshold": "80%"
  },
  "pattern_analysis": {
    "interval": 3600,
    "min_confidence": 0.8,
    "max_patterns": 1000,
    "learning_rate": 0.1
  },
  "metrics_collection": {
    "interval": 60,
    "batch_size": 100,
    "categories": [
      "performance",
      "usage",
      "errors",
      "patterns"
    ]
  },
  "optimization": {
    "auto_vacuum": true,
    "index_rebuild": "weekly",
    "cache_size": "512MB"
  },
  "monitoring": {
    "disk_usage_alert": 85,
    "performance_threshold": {
      "query_ms": 100,
      "write_ms": 50
    }
  }
}
