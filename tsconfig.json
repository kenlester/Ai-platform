{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": [
    "ai_core/**/*",
    "api/**/*",
    "data/**/*",
    "dev_tools/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "examples"
  ]
}
